@model VA_Patient_Registration_Site.Models.Doctor

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Doctor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Doc_fname" class="control-label">First Name</label>
                <input asp-for="Doc_fname" class="form-control" />
                <span asp-validation-for="Doc_fname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doc_lname" class="control-label">Last Name</label>
                <input asp-for="Doc_lname" class="form-control" />
                <span asp-validation-for="Doc_lname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Email" class="control-label">Email Address</label>
                <input asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Password" class="control-label">Password</label>
                <input asp-for="User.Password" class="form-control" />
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassCode" class="control-label">Administrator Validation Code</label>
                <input asp-for="PassCode" class="form-control" />
                <span asp-validation-for="PassCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Account" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
