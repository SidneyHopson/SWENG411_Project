@model IEnumerable<VA_Patient_Registration_Site.Models.Patient>

@{
    ViewData["Title"] = "Find";
}

<h2>Find</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pat_fname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pat_lname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doc_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pat_fname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pat_lname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doc_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Pat_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Pat_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Pat_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
